# Template de configuration - Copiez vers .env.development ou .env.production
NODE_ENV=development
PORT=5000

# Base de données - Remplacez par vos informations réelles
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
PGSSL=false

# Secrets - IMPORTANT: Générez des valeurs sécurisées !
SESSION_SECRET=votre-secret-session-tres-long-et-aleatoire

# Logs
LOG_LEVEL=debug

# Timezone
TZ=Europe/Paris

# Configuration optionnelle pour la production
# NODE_OPTIONS=--max-old-space-size=4096